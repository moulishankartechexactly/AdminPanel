@model Model.Dtos.ProductDto
@{
    ViewData["Title"] = "Create Product";
}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Create Product</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <partial name="_ProductFormFields" />
                <div class="row g-3 mt-1">
                    <div class="col-12 col-md-6">
                        <label class="form-label">Upload Image</label>
                        <input class="form-control" type="file" name="imageFile" accept="image/*" />
                        <div class="form-text">JPEG/PNG up to a few MB.</div>
                    </div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

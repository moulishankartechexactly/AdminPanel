@model Model.Dtos.ProductDto
@{
    ViewData["Title"] = "Edit Product";
}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Edit Product</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <partial name="_ProductFormFields" />
                <div class="row g-3 mt-1">
                    <div class="col-12 col-md-6">
                        <label class="form-label">Replace Image</label>
                        <input class="form-control" type="file" name="imageFile" accept="image/*" />
                        <div class="form-text">Selecting a new image will replace the existing one.</div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(Model?.ImageUrl))
                    {
                        <div class="col-12 col-md-6 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-danger ms-auto" data-bs-toggle="modal" data-bs-target="#confirmRemoveImage">
                                <i class="bi bi-trash"></i> Remove Image
                            </button>
                        </div>
                    }
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@if (!string.IsNullOrWhiteSpace(Model?.ImageUrl))
{
    <div class="modal fade" id="confirmRemoveImage" tabindex="-1" aria-labelledby="confirmRemoveImageLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmRemoveImageLabel">Remove product image?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    This will permanently delete the current image from the server and clear it from the product. Continue?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form asp-action="RemoveImage" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Yes, remove</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@model Model.Dtos.ProductDto
@{
    ViewData["Title"] = "Delete Product";
}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Delete Product</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
    </div>
    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                Are you sure you want to delete <strong>@Model.Name</strong>?
            </div>
            <dl class="row mb-0">
                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>
                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
                <dt class="col-sm-3">Stock</dt>
                <dd class="col-sm-9">@Model.StockQuantity</dd>
            </dl>
            <form asp-action="Delete" method="post" class="mt-3 d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

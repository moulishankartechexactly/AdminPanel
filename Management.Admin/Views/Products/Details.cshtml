@model Model.Dtos.ProductDto
@{
    ViewData["Title"] = "Product Details";
}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">Product Details</h2>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-3 align-items-start">
                <div class="col-12 col-md-4">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <div class="border rounded p-2 text-center bg-light">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="max-height:300px; object-fit:contain;" />
                        </div>
                    }
                    else
                    {
                        <div class="border rounded p-4 text-center text-muted bg-light">No image</div>
                    }
                </div>
                <div class="col-12 col-md-8">
                    <div class="mb-3">
                        <div class="text-muted small">Name</div>
                        <div class="fs-5">@Model.Name</div>
                    </div>
                    <div class="mb-3">
                        <div class="text-muted small">Category</div>
                        <div class="fs-5"><span class="badge rounded-pill bg-light text-dark">@Model.Category</span></div>
                    </div>
                    <div class="row g-3 mb-2">
                        <div class="col-6 col-lg-4">
                            <div class="text-muted small">Price</div>
                            <div class="fs-5">@Model.Price.ToString("C")</div>
                        </div>
                        <div class="col-6 col-lg-4">
                            <div class="text-muted small">Stock</div>
                            <div class="fs-5">@Model.StockQuantity</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="text-muted small">Description</div>
                        <div>@Model.Description</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

